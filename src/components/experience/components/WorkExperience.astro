---
import type { Experience } from "../../../models/Experience";
import Chips from "../../chips.astro";

interface Props {
    experience: Experience
}

const { experience } = Astro.props
---

<li
    class="flex gap-4 lg:max-w-[570px] flex-row-reverse"
    data-aos="zoom-in"
>
    <div class="relative py-3 px-4 flex flex-col gap-5 rounded-md hover:shadow-primary-green content-experience">
        <div class="flex flex-col gap-2">
            <p class="text-body/75 font-medium text-sm">{experience.date}</p>
            <p class="text-primary-green text-3xl font-bold">{experience.workstation}</p>
            <p class="text-white text-2xl font-bold">{experience.business}</p>
            <p class="text-white text-base" set:html={experience.description}></p>
        </div>

        <div class="flex flex-wrap gap-2">
            {experience.technologies.map((technology) => <Chips text={technology} />)}
        </div>

        <a href={experience.businessHref} class="absolute top-5 right-5 text-white" target="_blank">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 3H3C2.46957 3 1.96086 3.21071 1.58579 3.58579C1.21071 3.96086 1 4.46957 1 5V15C1 15.5304 1.21071 16.0391 1.58579 16.4142C1.96086 16.7893 2.46957 17 3 17H13C13.5304 17 14.0391 16.7893 14.4142 16.4142C14.7893 16.0391 15 15.5304 15 15V9M8 10L17 1M17 1H12M17 1V6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </a>
    </div>

    <div class="w-4 flex items-start justify-center relative container-dashed-line-experience">
        <div class="relative border-dashed border-r-2 h-full dashed-line-experience"></div>
        <span class="bg-white w-3 h-3 rounded-full absolute top-0 mx-auto circle-experience"></span>
    </div>
</li>



<style>
    .content-experience:hover {
        box-shadow: 0px 0px 0px 1px var(--text-primary-green);
        background: hsla(110, 6%, 19%, 0.469);
        transition: box-shadow .25s;
    }

    .content-experience > a {
        display: none;
    }

    .content-experience:hover > a {
        display: block;
    }

    .content-experience:hover + .container-dashed-line-experience > .dashed-line-experience {
        border-color: var(--text-primary-green);
        transition: box-shadow .25s;

    }

    .content-experience:hover + .container-dashed-line-experience > .circle-experience {
        background: var(--text-primary-green);
        transition: box-shadow .25s;

    }
</style>